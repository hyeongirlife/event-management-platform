    # Production Environment

    # MongoDB Configuration
    MONGODB_URI=mongodb+srv://<username>:<password>@<your-cluster-url>/event_auth_prod?retryWrites=true&w=majority # 실제 프로덕션 DB URI로 변경
    MONGODB_DB_NAME=event_auth_prod

    # JWT Configuration
    JWT_SECRET=VERY_STRONG_AND_COMPLEX_RANDOM_SECRET_KEY_FOR_PRODUCTION_USE_ONLY_MIN_32_CHARS_LONG # 매우 강력한 실제 시크릿 키로 변경
    JWT_EXPIRES_IN=15m # 프로덕션에서는 짧은 만료 시간 권장 (예: 15분)

