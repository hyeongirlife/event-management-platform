
MONGODB_URI="mongodb://localhost:27017" # 로컬 개발용 예시. 프로덕션에서는 실제 URI로 변경. (예: mongodb+srv://<user>:<password>@cluster.mongodb.net/)
MONGODB_DB_NAME="event_auth_dev" # 개발용 DB 이름 예시

# JWT Configuration
JWT_SECRET="YOUR_DEVELOPMENT_JWT_SECRET_KEY_SHOULD_BE_HERE_AND_DIFFERENT_IN_PRODUCTION" # 실제 값은 .env 파일에만 저장. 프로덕션에서는 매우 강력한 키 사용.
JWT_EXPIRES_IN="1h" # 예: 1h (1시간), 15m (15분), 7d (7일)

